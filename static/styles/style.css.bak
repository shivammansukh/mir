body {
  font-family: Arial, sans-serif;
  background-color: #f2f2f2;
}

.container {
  max-width: 600px;
  margin: 50px auto;
  text-align: center;
  background-color: #fff;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

h2 {
  color: #333;
}

#fileInput {
  margin-top: 20px;
}

#imageCount {
  margin-top: 10px;
  font-size: 16px;
  color: #666;
}

#fileInput::-webkit-file-upload-button {
  padding: 10px 15px;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s;
}

#fileInput::-webkit-file-upload-button:hover {
  background-color: #45a049;
}

#fileInput::-webkit-file-upload-button:active {
  background-color: #3e8e41;
}

#fileInput:disabled::-webkit-file-upload-button {
  background-color: #e0e0e0;
  color: #666;
  cursor: default;
}

#fileInput:disabled::-webkit-file-upload-button:hover {
  background-color: #e0e0e0;
}

#fileInput:disabled::-webkit-file-upload-button:active {
  background-color: #e0e0e0;
}

#uploadButton {
  padding: 10px 15px;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s;
}

#uploadButton:hover {
  background-color: #45a049;
}

#uploadButton:active {
  background-color: #3e8e41;
}